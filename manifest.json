{
    "manifest_version": 3,
    "name": "Antigravity Observer",
    "version": "1.1",
    "description": "Automatically archives AI conversations to your RAG Brain.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads",
        "tabs",
        "proxy"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}